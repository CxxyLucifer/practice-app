{
    "compilerOptions": {
        "baseUrl": "./src",
        "rootDir": "./src",
        "outDir": "./build/",
        "sourceMap": false,
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "module": "es2015",
        "target": "es6",
        "jsx": "react-native"
    },
    "exclude": [
        "dist",
        "android",
        "ios",
        "node_modules",
        "react-dom",
        "index.android.js",
        "index.ios.js"
    ]
}